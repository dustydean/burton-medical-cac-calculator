{
  "name": "strategic-cac-calculator-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Strategic CAC Calculator - ensuring reliability and accuracy of financial calculations",
  "main": "cac-calculator.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:performance": "jest --testPathPattern=performance",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint tests/",
    "serve": "http-server -p 8080",
    "dev": "npm run serve"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "eslint": "^8.55.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "**/*.{js,html}",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ]
  },
  "keywords": [
    "testing",
    "jest",
    "playwright",
    "e2e-testing",
    "unit-testing",
    "integration-testing",
    "performance-testing",
    "cac-calculator",
    "financial-calculator",
    "javascript",
    "test-automation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dustydean/cac-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/dustydean/cac-calculator/issues"
  },
  "homepage": "https://github.com/dustydean/cac-calculator#readme",
  "author": "Test Suite Builder",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}